<%= turbo_frame_tag "portfolio-frame" do %>
  <section class="section-common pt-120 pb-120 project-page">
    <div class="row">
      <div class="section-title-three text-center">
        <div class="water-text">Edit Project</div>
        <h2>Edit Project</h2>
      </div>
    </div>
    <div class="row">
      <div class="text-center">
        <figure class="edit-project-image">
          <% if @project.image.persisted? %>
            <%= image_tag @project.image %>
          <% else %>
            <%= image_tag "placeholder.webp" %>
          <% end %>
        </figure>
      </div>
    </div>
    <%= render "form", project: @project %>
  </section>
<% end %>
