<div class="row justify-content-center align-items-center">
  <div class="col-xl-12 col-lg-12">
    <%= form_with model: project do |form| %>
      <div class="row">
        <% if project.errors.any? %>
          <div class="col-lg-12 text-red">
            <h2><%= pluralize(project.errors.count, "error") %>
              prohibited this project from being saved:</h2>

            <ul>
              <% project.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="col-lg-12">
          <div class="form-inner">
            <%= form.label :title, class: "form-label" %>
            <%= form.text_field :title %>
          </div>
        </div>

        <div class="col-lg-12">
          <div class="form-inner">
            <%= form.label :description, class: "form-label" %>
            <%= form.text_area :description, rows: 2 %>
          </div>
        </div>

        <div class="col-lg-12">
          <div class="form-inner">
            <%= form.label :code_url, class: "form-label" %>
            <%= form.text_field :code_url %>
          </div>
        </div>

        <div class="col-lg-12">
          <div class="form-inner">
            <%= form.label :live_url, class: "form-label" %>
            <%= form.text_field :live_url %>
          </div>
        </div>

        <div class="col-lg-12">
          <div class="form-inner">
            <%= form.label :image, class: "form-label" %>
            <%= form.file_field :image, accept: 'image/png,image/gif,image/jpeg,image/svg+xml' %>
          </div>
        </div>

        <div class="col-lg-12">
          <div class="form-inner">
            <%= form.label :category, class: "form-label" %>
            <%# @categories.coollect returns an array of arrays: %>

            <%# [["opt1", "val1"], ["opt2", "val2"], ["opt3", "val3"] ...] %>
            <%= form.select(:category_id, @categories.collect{|cat| [cat.name, cat.id]}, {}, {class: "form-select-new"}) %>
          </div>
        </div>

        <div class="mt-4">
          <button type="submit" class="eg-btn btn--primary btn--lg">Save</button>
          <%= link_to "Cancel", request.referer.present? ? request.referer : root_path, class: "eg-btn btn--primary-three btn--lg ms-2" %>
          <%# link_to "Cancel", root_path, class: "eg-btn btn--primary-three btn--lg ms-2" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
