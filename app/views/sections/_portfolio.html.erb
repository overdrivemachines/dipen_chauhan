<section class="section-common portfolio-section pt-120" id="portfolio">
  <div class="row">
    <div class="section-title-three text-center">
      <div class="water-text">Portfolio</div>
      <h2>Portfolio
        <%= link_to new_project_path do %>
          <i class='bx bx-plus'></i>
        <% end %>
      </h2>
    </div>
  </div>
  <div class="row justify-content-center g-4">
    <div class="col-lg-12">
      <div class="filters filter-button-group">
        <ul class="d-flex justify-content-center flex-wrap" id="portfolioCategories">
          <li class="filter active" data-filter="*">All <span><%= Project.all.size %></span></li>
          <% @categories.each do |category| %>
            <li class="filter" data-filter="<%= category.abbr %>"><%= category.name %> <span><%= category.projects.size %></span></li>
          <% end %>
          <%# <li class="filter" data-filter="rails">Ruby on Rails <span>3</span></li> %>
          <li>
            <%= link_to new_category_path do %>
              <i class='bx bx-plus'></i>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="row justify-content-center g-4 portfolio-item-container">
    <% @projects.each do |project| %>
      <div class="col-lg-4 col-md-6 col-sm-6 grid-item portfolio-item" data-category="<%= project.category.abbr %>">
        <div class="portfolio-single-one style-three magnetic-item">
          <%= image_tag project.image, class: "img-fluid", alt: "Image" %>
          <div class="content">
            <h3><%= project.title %></h3>
            <p><%= project.description %></p>
            <div class="d-flex justify-content-between">
              <%= link_to "Live Site", project.live_url %>
              <%= link_to "View Code", project.code_url %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
