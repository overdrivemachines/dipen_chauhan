<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %>
        prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :abbr, class: "form-label" %>
    <%= form.text_field :abbr, class: "form-control" %>
  </div>

  <div class="mt-4">
    <%= form.submit "Submit", class: "btn btn-primary" %>
    <%= link_to "Cancel", projects_path, class: "btn btn-secondary ms-1" %>
  </div>
<% end %>
